<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mendapatgo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="MendapatGo"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".CustomerDashboardActivity" />
        <activity android:name=".AdminDashboardActivity" />
        <activity android:name=".RoomListActivity" />
        <activity android:name=".BookingActivity" />
        <activity android:name=".PaymentActivity" />
        <activity android:name=".MyBookingActivity" />
        <activity android:name=".BookingDetailsActivity" />

        <!-- Admin Room Management Activities -->
        <activity android:name=".ManageRoomsActivity" />
        <activity android:name=".NewRoomActivity" />
        <activity android:name=".UpdateRoomActivity" />

        <!-- Admin Booking Management Activities -->
        <activity android:name=".ManageBookingsActivity" />
        <activity android:name=".UpdateBookingActivity" />

    </application>

</manifest>