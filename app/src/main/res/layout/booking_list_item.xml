<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvBookingId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking #1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/tvRoomInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room 101 - Deluxe"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#555555"/>

        <TextView
            android:id="@+id/tvCheckInDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check-in: 2025-02-01"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/tvCheckOutDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check-out: 2025-02-03"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:textColor="#666666"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RM 300.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2196F3"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@android:drawable/dialog_holo_light_frame"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>