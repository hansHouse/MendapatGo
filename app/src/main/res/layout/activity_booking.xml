<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Room"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvRoomInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room Info"
            android:textSize="16sp"
            android:textColor="#333"
            android:padding="12dp"
            android:background="#FFF"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-in Date (YYYY-MM-DD)"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etCheckIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="2024-01-15"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-out Date (YYYY-MM-DD)"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etCheckOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="2024-01-20"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Guests"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etGuests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="2"
            android:inputType="number"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnConfirmBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Booking"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50"/>

    </LinearLayout>

</ScrollView>